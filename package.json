{
  "name": "@pepr/istio",
  "license": "Apache-2.0",
  "repository": "defenseunicorns/pepr-istio",
  "version": "0.10.0",
  "description": "This capability supports automation related to the Istio Service Mesh",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security",
    "istio",
    "service-mesh"
  ],
  "pepr": {
    "name": "Istio",
    "uuid": "6fe3afc1-3555-5ee3-9728-fcdfad713f6e",
    "onError": "audit",
    "alwaysIgnore": {
      "namespaces": [],
      "labels": []
    }
  },
  "scripts": {
    "build": "rm -fr dist && npx pepr build -e index.ts",
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0' --k3s-arg '--kubelet-arg=streaming-connection-idle-timeout=10s@server:0'",
    "test": "ava"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.0.0-rc3",
    "ava": "^5.3.1",
    "kubernetes-fluent-client": "^1.4.1",
    "pepr": "../pepr/pepr-0.0.0-development.tgz",
    "ts-node": "^10.9.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failFast": true,
    "verbose": true
  }
}
